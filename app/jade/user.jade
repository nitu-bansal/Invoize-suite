//Using fluid as the other has fixed pixels and doesnt extend the whole screen.
//- .row-fluid.top-outline
.container-fluid
        include common_top_row
        section
                .row-fluid
                        .span2.bs-docs-sidebar(style="cursor: pointer;")
                                ul.nav.nav-list.bs-docs-sidenav
                                        input(type="text",ng-change="searchUser()", placeholder="Search", ng-model="search")
                                        li.nav-header
                                                h4(rel="tooltip") User
                                                        .badge.label-info.pull-right(bs-tooltip="tooltip.total")  {{totalUser}}
                                                span
                                                         a.btn.btn-success.btn-mini(permission="createUser.*.*",ng-disabled="$state.includes('user.new')",href="#/user/new",bs-tooltip="tooltip.new" , ng-click="initializeUser()") 
                                                                 i.icon-plus.icon-white
                                                i.icon-spinner.icon-spin.icon-4x(ng-show="userListLoader")
                                        ul.nav.nav-list.bs-docs-sidenav(id="Fixed", when-scrolled="loadMore()")                                                
                                                li(ng-class="{ active: $stateParams.userId == l.id}", ng-repeat="l in userList")
                                                        a(ng-click="selectUser(l.id)", data-toggle="tab", href="#/user/{{l.id}}")
                                                                i.icon-chevron-right
                                                                {{l.v|titlecase}}
                                        ul
                                                i.icon-spinner.icon-spin.icon-2x(ng-show="loadingMore")
                        .span10
