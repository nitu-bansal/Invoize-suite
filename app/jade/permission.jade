//Using fluid as the other has fixed pixels and doesnt extend the whole screen.
.row-fluid.top-outline
.container-fluid
        include common_top_row
        section
                .row-fluid
                        .span2(style="cursor: pointer;")
                                ul.nav.nav-list
                                        input.search-query(type="search", placeholder="Search", ng-model="search")
                                        li.nav-header(rel="tooltip") Permission
                                                        .badge.label-info.pull-right(bs-tooltip="tooltip.total")  {{totalPermission}}
                                                li(ng-repeat="l in permissionList() | filter:search")
                                                        a(data-toggle="tab", href="#/permission/{{l.id}}") {{l.name}}
                        .span10
                                .row-fluid
                                        a.pull-right.btn.btn-success.btn-margin(href="#/permission/new")
                                                i.icon-plus.icon-white
                                                |  Permission
                                div(ui-view="list")