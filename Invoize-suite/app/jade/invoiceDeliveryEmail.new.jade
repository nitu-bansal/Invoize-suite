form(novalidate,name="form")
.row(ng-init="setPreData();")
    .col-xs-12
        .doc-block
            .title.strip Delivery Details
    .col-xs-12
        .row
            .col-sm-3
                div.input-group.non-valid.form-section
                    span.input-group-addon Name
                    input(placeholder="Name", ng-model="data.invoicedelivery.name",type='text',ng-required="true",name="invoicedeliveryName")
                //span(ng-show="form.invoicedeliveryName.$error.required") *
                //span.green.validTick(ng-show="form.invoicedeliveryName.$valid") &#10004;

            .col-sm-3
                div.input-group
                    span.input-group-addon Party
                    select.wd185(ui-select2='ui-select2', data-placeholder='Select',ng-model='data.invoicedelivery.deliveryParty',ng-required="false")
                        option(value="{{key}}",ng-repeat="(key,val) in deliveryParty") {{val}}
                            //- span.input-large4
                            //- 	dynamic-Select(name="invoicedeliveryParty",ng-model="data.invoicedelivery.deliveryParty",ph="listing_deliveryParty",placeholder="Delivery Party",ng-required="true")
                            //- span(ng-show="form.invoicedeliveryParty.$error.required") *
                            //- span.green.validTick(ng-show="form.invoicedeliveryParty.$valid") &#10004;
            .col-sm-3
                div.input-group.non-valid.form-section
                    span.input-group-addon Party Name
                    input(placeholder="Delivery Party Name", ng-model="data.invoicedelivery.deliveryPartyName",type='text',ng-required="true",name="invoicedeliveryPartyName")
                    //span(ng-show="form.invoicedeliveryPartyName.$error.required") *
                    //span.green.validTick(ng-show="form.invoicedeliveryPartyName.$valid") &#10004;

            .col-sm-3
                .pull-right.in-add
                    .btn-group.pull-right(style="vertical-align: inherit;")
                        button.btn-sm.btn-ico.btn-custom.dropdown-toggle.arrow-right(data-toggle='dropdown', type='button' ,tooltip="Configuration Mode",tooltip-placement="top")
                            i.fa.fa-angle-down
                            |&nbsp; Mode
                        ul.dropdown-menu.filter-ddm.arrow-right.dropdown-caret(aria-labelledby='btnGroupVerticalDrop1', role='menu')
                            li
                                table
                                    tbody
                                        tr(ng-repeat="type in data.profileBase")
                                            td(style="padding:0px 10px;") {{type.label}}
                                            td
                                                dynamic-Select(name="TypeValue_{{$index}}",ng-model="type.value",ph="{{type.suggestionsSource}}",placeholder="Please Select")


