include common_top_row
.main-container(id="main-container")
        .main-container-inner
                a.menu-toggler(id="menu-toggler",href="#")
                        span.menu-text
                div.sidebar(id="sidebar")
                        div.sidebar-shortcuts(id="sidebar-shortcuts")
                                div.sidebar-shortcuts-large(id="sidebar-shortcuts-large")
                                        a.btn.btn-mini.btn-success(data-placement="right",permission="createWorkflow.*.*",ng-disabled="$state.includes('workflow.new')",href="#/workflow/new",bs-tooltip="tooltip.new" , ng-click="initializeWorkflow()") 
                                                i.icon-plus 
                                        btn.pull-left
                                                h5 &nbsp; Workflow 
                                div.sidebar-shortcuts-mini(id="sidebar-shortcuts-mini")
                                        span.btn.btn-success
                                        span.btn.btn-info
                                        span.btn.btn-warning
                                        span.btn.btn-danger     
                        div.sidebar-collapse(id="sidebar-collapse")
                                i.icon-double-angle-left 
                        div.nav-search(id="nav-search")
                                form.form-search(id="form-search")
                                        span.input-icon
                                                input.nav-search-input(id="nav-search-input",type="text",ng-change="searchWorkflow()", placeholder="Search ...",ng-model="search", autocomplete="off")
                                                i.icon-spinner.icon-spin.blue.icon-large(ng-show="workflowLisLoader")
                                                i.icon-search.nav-search-icon(id="nav-search-icon",ng-hide="workflowLisLoader")                                              
                                div(id="sidebar-shortcuts-mini")
                                        i.icon-search.blue.icon-large                                      
                        ul.nav.nav-list(id='fixed-rate',when-scrolled="loadMore()")  
                                li(ng-class="{ active: $stateParams.workflowId == l.id}", ng-repeat="l in workflows")
                                        a(data-toggle="tab", href="/#/workflow/{{l.id}}", ng-click="selectWorkflow(l.id)")
                                                i.icon-blank {{l.v|firstLetter}}
                                                span.trim-info-large {{l.v|toHumanReadable}}
                .main-content(id="main-content")
                        div.fixed.breadcrumbs(id="breadcrumbs")
                                ul.breadcrumb
                                        li
                                                i.icon-home
                                                a Home
                                                span.divider
                                                        i.icon-angle-right
                                                |Administration
                                                span.divider
                                                        i.icon-angle-right
                                        li.active Workflow                         
                        .page-content(id="page-content",ui-view="list") 