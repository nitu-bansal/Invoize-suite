.row(ng-show="deliveryState=='view'", style="padding-top:10px;")
    .in-wiz-row.pull-left.pull-up(style="margin-top:-35px;", ng-show="$state.current.name.split('.')[0]=='wizard'")
        button.inz-btn.btn-sm.btn-ico.btn-default.go-back(ng-click="RulesState('invoiceDeliveryRuleNew')",tool-tip,data-placement="top", data-toggle="tooltip", title="Add Mode",ng-show="showBackBtn")
             i.fa.fa-plus
    .in-wiz-row.pull-left.pull-up(style="margin-top:-42px;", ng-hide="$state.current.name.split('.')[0]=='wizard'")
        button.inz-btn.btn-sm.btn-ico.btn-default.go-back(ng-click="RulesState('invoiceDeliveryRuleNew')",tool-tip,data-placement="top", data-toggle="tooltip", title="Add Mode",ng-show="showBackBtn")
            i.fa.fa-plus

    .col-sm-6.col-md-6.col-lg-4.inz-blk(ng-repeat="ListItem in invoiceDeliveryModeList | orderBy:title",ng-form="subForm", style="margin-bottom:30px;")
        .in-view-block
                .title {{ListItem.mode}} - {{ListItem.profileName}}
                .line
                        .caption Party
                        .data {{ListItem.deliveryParty}}
                .line
                        .caption Party Name
                        .data {{ListItem.deliveryPartyName}}

        .in-btn-blk
                .in-btn-grp
                        .in-btn-row
                                button.inz-btn.btn-sm.btn-danger(tool-tip,data-placement="top", data-toggle="tooltip", title="Delete" , ng-click="")
                                        i.fa.fa-trash-o
                                button.inz-btn.btn-sm.btn-danger(tool-tip,data-placement="top", data-toggle="tooltip", title="Edit" , ng-click="currentTab='invoiceDeliveryModeEdit';invoiceDeliveryModeEdit(ListItem.id )")
                                        i.fa.fa-pencil
                                button.inz-btn.btn-sm.btn-danger(tool-tip,data-placement="top", data-toggle="tooltip", title="View" , ng-click="invoiceDeliveryModeView(ListItem.id )")
                                        i.fa.fa-eye
                                button.inz-btn.btn-sm.btn-danger(tool-tip,data-placement="top", data-toggle="tooltip", title="Default" , ng-click="invoiceDeliveryModeDefault(ListItem.id )")
                                        i.fa.fa-anchor
