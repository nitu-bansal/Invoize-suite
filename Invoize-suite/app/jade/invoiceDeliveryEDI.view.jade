.row.in-wiz-ttl.in-filter(style="padding: 5px 0; margin-top:-15px;",ng-init="getSystemAccountMetadataList('')")
    i.icon-spinner.icon-spin.icon-2x(ng-show="metadataLoader")
.row
    .col-sm-6.col-md-6.col-lg-4.inz-blk(ng-repeat="listItem in metadataList",ng-form="subForm", style="margin-bottom:30px;")
        .in-view-block
            .title
                i.fa.fa-tags.small &nbsp;
                | {{listItem.value}}
            .line(ng-repeat="(key,value) in listItem.fields", ng-show="$index<3" )
                .caption {{key}}
                .data {{value | selectFormat}}
        .in-btn-blk
            .in-btn-grp
                .in-btn-row
                    button.inz-btn.btn-sm.btn-danger(tool-tip,data-placement="top", data-toggle="tooltip", title="Edit", ng-click="setMetadata(listItem)")
                        i.fa.fa-pencil
