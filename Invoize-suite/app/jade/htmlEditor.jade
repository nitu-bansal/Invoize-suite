                                        a.btn.btn-small.btn-purple(data-original-title='Indent (Tab)', data-edit='indent', title='')
                                                i.icon-indent-right
                                .btn-group
                                        a.btn.btn-small.btn-primary.active(data-original-title='Align Left (Ctrl/Cmd+L)', data-edit='justifyleft', title='')
                                                i.icon-align-left
                                        a.btn.btn-small.btn-primary(data-original-title='Center (Ctrl/Cmd+E)', data-edit='justifycenter', title='')
                                                i.icon-align-center
                                        a.btn.btn-small.btn-primary(data-original-title='Align Right (Ctrl/Cmd+R)', data-edit='justifyright', title='')
                                                i.icon-align-right
                                        a.btn.btn-small.btn-inverse(data-original-title='Justify (Ctrl/Cmd+J)', data-edit='justifyfull', title='')
                                                i.icon-align-justify                                                                      
                                .btn-group
