.modal-dialog.container
    .modal-content
            .modal-header
                h4.modal-title Chose your environment
                    i.icon-spinner.icon-spin.white.icon-large(ng-show="loader")
            .modal-body
                .row
                    .col-md-6
                        .noti-con
                            .noti-title Select Company
                            dynamic-Select.ftext(required,name="searchCompany",ng-model="search.company",ph="userCompany",placeholder="Select Company",change="clearSystem()")
                    .col-md-6
                        .noti-con
                            .noti-title Select System
                            dynamic-Select.ftext(required,customobj='{"companyId":"{{search.company[0].id!=null ? search.company[0].id : userCompany[0].id}}"}',disabled="search.company==null || search.company.length==0",name="searchSystem",ng-model="search.system",ph="userSystem",placeholder="Select System")
            .modal-footer
                button.inz-btn.btn-sm.btn-success(ng-click="apply()",ng-class="{'disabled': search.company==null || search.system==null}",ng-disabled="search.company==null || search.system==null") Apply
