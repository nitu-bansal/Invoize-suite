.row.in-wiz-ttl.in-fix-scroll(set-width, ng-init="getApprovalList('')")
    .col-xs-12
        .pull-left
            .in-wiz-info Approval
        .pull-right
            i.icon-spinner.icon-spin.blue.icon-large(ng-show="templateLoader")
           
            a(style="vertical-align: middle;",ng-click="redirectTo('/approval/new')",style="cursor:pointer")
                span.in-add-sign +
                span.in-add-txt Add Approval
div(style="clear:both;")
.col-xs-12.col-md-12.col-sm-12
    .col-sm-6.col-md-4.col-xs-12.inz-blk(ng-repeat="ListItem in approvalList | orderBy:name",ng-form="subForm", style="margin-bottom:10px;")
        .in-view-block
            .title
                i.fa.fa-tags.small &nbsp;
                | Name : {{ListItem.name}}
            .line
                .caption Active
                .data {{ListItem.active}}
        .in-btn-blk
            .in-btn-grp
                .in-btn-row
                    //- button.inz-btn.btn-sm.btn-danger(tool-tip,data-placement="top", data-toggle="tooltip", title="Delete" )
                    //-     i.fa.fa-trash-o
                    button.inz-btn.btn-sm.btn-danger(tool-tip,data-placement="top", data-toggle="tooltip", title="Edit" , ng-click="editTemplate(ListItem.id)")
                        i.fa.fa-pencil
                    button.inz-btn.btn-sm.btn-danger(tool-tip,data-placement="top", data-toggle="tooltip", title="View" , ng-click="viewTemplate(ListItem.id)")
                        i.fa.fa-eye
