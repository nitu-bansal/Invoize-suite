.col-md-4(id="FixedRate")
        fluid-row
                h4.header.smaller.lighter.gray Invoices   
                        i.icon-spinner.icon-spin.icon(ng-show="rateRequestListLoader")           
        div(ng-hide="categorizedLists.length || rateRequestListLoader")
                h4
                        | No invoices available under this category.
                        i.icon-frown

        .widget-box.transparent(ng-show="categorizedLists.length")              
                .widget-body
                        .widget-main.no-padding
                                table.table.table-bordered.table-striped.table-hover(ng-hide="!categorizedLists.length || rateRequestListLoader")
                                        thead
                                                    tr
                                                        th
                                                                i.icon-flag.black &nbsp Invoice#
                                                        th 
                                                                i.icon-time.black &nbsp Date                                                                                                        
                                                        th.hidden-767 
                                                                i.icon-group.black &nbsp Amount  

                                        tbody(ng-repeat="r in categorizedLists  | filter:searchFilter")
                                                        tr(data-placement="bottom", permission="readInvoice.*.*", style="cursor: pointer;", bs-tooltip="tooltip.detail", ng-class="{'alert-custom': $state.includes('payright.invoiceList.detail') && $stateParams.invoiceId == r.id}", ng-click="readInvoice(r.id)")
                                                                td
                                                                        {{r.invoiceNumber}}
                                                                td
                                                                        {{r.invoiceDate |  date:'mediumDate'}}
                                                                                               
                                                                td.hidden-767
                                                                        .center
                                                                                {{r.monetaryAmount}}
 .col-md-8
    div(ui-view="detail")