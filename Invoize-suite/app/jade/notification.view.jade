.row.in-wiz-ttl.in-fix-scroll(set-width, ng-init="getNotificationList('')")
    .col-xs-12
        .pull-left
            .in-wiz-info Notification
        .pull-right
            i.icon-spinner.icon-spin.blue.icon-large(ng-show="templateLoader")
            //- input.in-query(placeholder="Search Notification",ng-change="getTemplates(q)",ng-model="q")
            //- button.in-query
            //-     i.fa.fa-search
            a(style="vertical-align: middle;",ng-click="redirectTo('/notification/new')",style="cursor:pointer")
                span.in-add-sign +
                span.in-add-txt Add Notification
div(style="clear:both")
.col-xs-12.col-md-12.col-sm-12.col-lg-12
    .col-sm-6.col-md-4.col-lg-3.col-xs-12.inz-blk(ng-repeat="ListItem in notificationTypes | orderBy:title",ng-form="subForm", style="margin-bottom:10px;")
        .in-view-block
            .title
                i.fa.fa-tags.small &nbsp;
                | Event : {{ListItem.eventName| selectFormat}}
            .line
                .caption Module
                .data {{ListItem.module| selectFormat}}
        .in-btn-blk
            .in-btn-grp
                .in-btn-row
                    button.inz-btn.btn-sm.btn-danger(tool-tip,data-placement="top", data-toggle="tooltip", title="Delete" )
                        i.fa.fa-trash-o
                    button.inz-btn.btn-sm.btn-danger(tool-tip,data-placement="top", data-toggle="tooltip", title="Edit" , ng-click="editTemplate(ListItem.id)")
                        i.fa.fa-pencil
                    button.inz-btn.btn-sm.btn-danger(tool-tip,data-placement="top", data-toggle="tooltip", title="View" , ng-click="viewTemplate(ListItem.id)")
                        i.fa.fa-eye
.in-wiz-footer
    button.inz-btn.btn-sm.btn-danger(ng-click="prevStep()")
        i.fa.fa-long-arrow-left
        | Previous Step
    button.inz-btn.btn-sm.btn-success(ng-click="nextStep()") Next Step
        i.fa.fa-long-arrow-right
