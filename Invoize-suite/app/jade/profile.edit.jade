.col-md-8
        form.form-horizontal(novalidate, name="form")
                .fieldset
                        .fluid-row
                                .btn-group.pull-right
                                        a.btn.btn-small.btn-primary(ng-hide="profileUpdateLoader", ng-click="backToDetails()", style="cursor: pointer;", bs-tooltip="tooltip.back")
                                                i.icon-mail-reply
                                        button.btn.btn-small.btn-primary(permission="updateProfile.*.*", ng-hide="profileUpdateLoader", ng-disabled="form.$invalid", ng-click="update()", style="cursor: pointer;", bs-tooltip="tooltip.save")
                                                i.icon-ok
                                        a.btn.btn-small.btn-primary(permission="deleteProfile.*.*", ng-hide="profileUpdateLoader", style="cursor: pointer;", bs-tooltip="tooltip.delete", ng-click="confirmDeleteProfile()")
                                                i.icon-trash
                                        i.icon-spinner.icon-spin.icon-2x(ng-show="profileUpdateLoader")
