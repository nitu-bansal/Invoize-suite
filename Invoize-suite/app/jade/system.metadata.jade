div(ng-init="getSystemMetadataList('')")
    h3.header.smaller.lighter.red
        i.fa.fa-search &nbsp;
        | Type &nbsp;
        dynamic-Select(ng-required="false",name="metadataTypeName",ng-model="MetadataName",ph="suggestion",toolTip="select metadata",ng-readonly="false",placeholder="select metadata",change="getMetadataType(MetadataName)")
.row(ng-show="!showGrid")
    .col-xs-12.col-sm-6.col-md-4.inz-blk(ng-repeat="ListItem in metadataTypes | orderBy:title",ng-form="subForm", style="margin-bottom:10px;")
        .in-view-block
            .title {{ListItem.n}}
            .line
                .caption Count
                .data {{ListItem.count}}
        .in-btn-blk
            .in-btn-grp
                .in-btn-row
                    button.inz-btn.btn-sm.btn-danger(tool-tip,data-placement="top", data-toggle="tooltip", title="Edit" , ng-click="setMetadataType(ListItem)")
                        i.fa.fa-pencil
div(style="clear:both")
div(ng-show="!metadataLoader && showGrid",ui-handsontable='{currentRowClassName: "currentRow",currentColClassName: "currentCol"}',afterCreateRow="onRowCreate",rowHeaders="rowNos",height='hh',width='hw',datarows='metadata in metadatas',manualColumnResize='true', columns='columns',minsparerows='1',onBeforeChange='celChangeMetadata',afterRender='afterRender()')
pagination(ng-show="!metadataLoader && showGrid",total-items="totalItems",items-per-page="pageLimit",max-size="paginationSize",rotate="true", page="currentPage", class="pagination-small",on-select-page="setPage($parent.currentPage)", boundary-links="true")
